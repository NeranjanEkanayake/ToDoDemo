<!DOCTYPE html>

<html>
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - To Do App</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>   
    @{
        bool isLoginPage = (Request.RequestContext.RouteData.Values["controller"] as string) != "AuthUser"
                           && (Request.RequestContext.RouteData.Values["action"] as string) != "Login";

        var authCookie = Request.Cookies[FormsAuthentication.FormsCookieName];
        var userRole = authCookie != null
            ? FormsAuthentication.Decrypt(authCookie.Value)?.UserData
            : null;
        bool isAdmin = userRole == "Admin";
    }
    @if (User.Identity.IsAuthenticated && isLoginPage)
    {

        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="d-flex align-items-center">

                    <span class="navbar-brand">Welcome, @User.Identity.Name</span>

                </div>

                <div class="d-flex justify-content-center flex-grow-1">
                    <ul class="navbar-nav">
                        @if (isAdmin)
                        {

                            <li class="nav-item mx-2">
                                <a class="nav-link btn btn-secondary text-white" href="@Url.Action("UserList", "User")">Display Users</a>
                            </li>
                            <li class="nav-item mx-2">
                                <a class="nav-link btn btn-primary text-white" href="@Url.Action("CreateUser", "User")">Add User</a>
                            </li>
                        }
                    </ul>
                </div>

                <div class="d-flex justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item mx-2">
                            <a class="nav-link btn btn-danger text-white" href="@Url.Action("Logout", "AuthUser")">Logout</a>
                        </li>
                    </ul>
                </div>

            </div>
        </nav>
    }
    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
